<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_text"
    android:orientation="vertical"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    tools:context="siliconwally.net.wallyapp.ScoreboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40.0"
            android:text="JalaSoft"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="184dp" />

        <TextView
            android:id="@+id/nameB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40.0"
            android:text="Truextend"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="1sp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="35.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setScoreA"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_weight="35.0"
                android:text="10"
                android:textColor="@android:color/white"
                android:textSize="150sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="35.0"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSetA"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="215dp"
                    tools:layout_editor_absoluteY="16dp" />

                <TextView
                    android:id="@+id/textViewSetB"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="283dp"
                    tools:layout_editor_absoluteY="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSetColorA"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    tools:layout_editor_absoluteX="215dp"
                    tools:layout_editor_absoluteY="66dp" />

                <TextView
                    android:id="@+id/textViewSetColorB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    tools:layout_editor_absoluteX="283dp"
                    tools:layout_editor_absoluteY="66dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="35.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setScoreB"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_weight="35.0"
                android:text="20"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="150sp"
                tools:layout_editor_absoluteX="383dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="1sp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TableRow
                android:id="@+id/llDetailA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </TableRow>
            <TableRow
                android:id="@+id/llDetailB"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
