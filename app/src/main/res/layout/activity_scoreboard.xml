<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp"
    tools:context="siliconwally.net.wallyapp.ScoreboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/nameA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40.0"
            android:text="JalaSoft"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/nameB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40.0"
            android:text="Truextend"
            android:textSize="30sp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/setScoreA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40.0"
            android:text="10"
            android:textSize="150sp"/>

        <TextView
            android:id="@+id/setScoreB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40.0"
            android:text="20"
            android:textSize="150sp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detailedScoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30.0"
                android:text="JalaSoft"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/detailedScoreASets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="70.0"
                android:text="10, 15, 20"
                android:textSize="20sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detailedScoreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30.0"
                android:text="Truextend"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/detailedScoreBSets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="70.0"
                android:text="10, 15, 20"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
